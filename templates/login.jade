doctype html(lang='en')
html
  head
    meta(http-equiv='Content-Type', content='text/html; charset=utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Raise.ch Better Shoutbox Login
  body
    if user || pass
      p.error Username or Password invalid!
    form(method='post')
      label Username:
        input(
          type='text'
          name='username'
          placeholder='Username'
          value=user
          autofocus
        )
      label Password:
        input(
          type='password'
          name='password'
          placeholder='Password'
          value=pass
        )
      input(type='submit')
